<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_Mascota"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margenes_fotos"
    card_view:cardElevation="@dimen/card_elevation"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_carview">

    <LinearLayout
        android:layout_marginTop="@dimen/margin_top"
        android:layout_width="wrap_content"
        android:padding="@dimen/margenes_fotos"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgMascota"
            android:src="@drawable/mascota1"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:id="@+id/tvCantidadLikes"
                android:gravity="center_vertical"
                android:textSize="@dimen/texto_cardview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:src="@drawable/hueso_amarillo"
                android:layout_width="@dimen/width_hueso"
                android:layout_height="@dimen/height_hueso" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>